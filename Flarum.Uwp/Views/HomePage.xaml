<Page
    x:Class="Flarum.Uwp.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:RichTextBlock="using:RichTextControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Flarum.Uwp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="{ThemeResource ContentDefaultMargin}">
        <TextBlock
            Margin="0,40"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{ThemeResource TitleTextBlockStyle}"
            x:Uid="Home_Title"/>
        <RichTextBlock:HtmlTextBlock x:Name="Header" Html="{x:Bind ViewModel.Forum.WelcomeMessage}" />
    </Grid>
</Page>
