<Application
    x:Class="Flarum.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Flarum"
    xmlns:converters="using:Flarum.Desktop.Helpers.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <ResourceDictionary Source="ms-appx:///Resources/Styles/NavigationView.xaml" />
                <ResourceDictionary Source="ms-appx:///Resources/Styles/_Thickness.xaml" />
                <ResourceDictionary Source="ms-appx:///Resources/Styles/PersonPicture.xaml" />
                <ResourceDictionary Source="ms-appx:///Resources/Styles/ContentDialog.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:IdToImageSourceConverter x:Key="IdToImageSourceConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
