<local:ShellPageBase
    x:Class="Flarum.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls1="using:ImageEx"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:Flarum.Helpers"
    xmlns:local="using:Flarum.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid x:Name="ContentArea">
            <Border
                x:Name="TitleDragArea"
                Height="48"
                Margin="48,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Canvas.ZIndex="999">
                <Grid x:Name="AppTitleBar" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="LeftPaddingColumn" Width="0" />
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
                    </Grid.ColumnDefinitions>
                    <controls1:ImageEx
                        Grid.Column="1"
                        Width="16"
                        Height="16"
                        Margin="0"
                        HorizontalAlignment="Left"
                        Source="{x:Bind ViewModel.IconUrl, Mode=OneWay}" />
                    <TextBlock
                        x:Name="AppTitleTextBlock"
                        Grid.Column="2"
                        Margin="16,0,8,0"
                        VerticalAlignment="Center"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind ViewModel.Title, Mode=OneWay}" />
                </Grid>
            </Border>
            <muxc:NavigationView
                x:Name="NavView"
                x:Uid="NavView"
                Style="{ThemeResource LeftNavViewDefaultStyle}">
                <muxc:NavigationView.PaneCustomContent>
                    <muxc:Button 
                        x:Name="CreateNewPost" 
                        x:Uid="Shell_CreateNewPost" 
                        Style="{ThemeResource AccentButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Margin="16,8"/>
                </muxc:NavigationView.PaneCustomContent>
                <muxc:NavigationView.MenuItems>
                    <muxc:NavigationViewItem
                        x:Name="Home"
                        x:Uid="Shell_Home"
                        helpers:NavigationHelper.NavigateTo="HomePage"
                        Icon="Home" />
                    <muxc:NavigationViewItem
                        x:Name="Tags"
                        x:Uid="Shell_Tags"
                        Icon="Tag" />
                    <muxc:NavigationViewItem
                        x:Name="Posts"
                        x:Uid="Shell_Posts"
                        Icon="Message" />
                </muxc:NavigationView.MenuItems>

                <muxc:NavigationView.FooterMenuItems>
                    
                    <muxc:NavigationViewItem x:Name="UserItem" Content="未登录">
                        <muxc:NavigationViewItem.Icon>
                            <muxc:ImageIcon />
                        </muxc:NavigationViewItem.Icon>
                    </muxc:NavigationViewItem>
                </muxc:NavigationView.FooterMenuItems>

                <Frame x:Name="ContentFrame" />
            </muxc:NavigationView>
        </Grid>
    </Grid>
</local:ShellPageBase>
