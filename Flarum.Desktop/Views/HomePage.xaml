<local:HomePageBase
    x:Class="Flarum.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:RichTextBlock="using:RichTextControls"
    xmlns:controls="using:Flarum.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Flarum.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Flarum.Provider.Models"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Media"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="480" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <controls:HomePageHeaderImage
                    Height="480"
                    VerticalAlignment="Top"
                    Canvas.ZIndex="0" />
                <Grid Margin="{ThemeResource ContentDefaultMargin}" Canvas.ZIndex="1">
                    <Grid
                        x:Name="HeaderContentArea"
                        Height="480"
                        VerticalAlignment="Top">
                        <Border x:Name="ShadowTarget1" />
                        <TextBlock
                            x:Uid="Home_Title"
                            Margin="0,40"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Foreground="White"
                            Style="{ThemeResource TitleTextBlockStyle}">
                            <ui:Effects.Shadow>
                                <ui:AttachedDropShadow
                                    CastTo="{x:Bind ShadowTarget1}"
                                    CornerRadius="32"
                                    Offset="4,4" />
                            </ui:Effects.Shadow>
                        </TextBlock>
                        <StackPanel
                            Grid.Row="1"
                            Margin="0,40"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                x:Name="WelcomeMessage"
                                Foreground="White"
                                Style="{ThemeResource TitleTextBlockStyle}"
                                Text="{x:Bind ViewModel.Forum.WelcomeTitle, Mode=OneWay}" />
                            <TextBlock
                                x:Name="Description"
                                Foreground="White"
                                Style="{ThemeResource SubtitleTextBlockStyle}"
                                Text="{x:Bind ViewModel.Forum.Description, Mode=OneWay}" />
                        </StackPanel>
                    </Grid>
                </Grid>
                
                <ItemsView
                    x:Name="DiscussinsListView"
                    Grid.Row="1"
                    ItemsSource="{x:Bind ViewModel.Discussions, Mode=OneWay}">
                    <ItemsView.Resources>
                        <DataTemplate x:Key="DiscussionItrmTemplate" x:DataType="models:FlarumDiscussion">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="96" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="96" />
                                    <RowDefinition Height="40" />
                                </Grid.RowDefinitions>
                                <PersonPicture
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0" />
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="80" />
                                        <RowDefinition Height="20" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        x:Name="DiscussionTitle"
                                        Margin="4"
                                        Style="{ThemeResource TitleLargeTextBlockStyle}"
                                        Text="{x:Bind Title, Mode=OneWay}" />
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ItemsView.Resources>

                </ItemsView>
            </Grid>
        </ScrollViewer>
    </Grid>
</local:HomePageBase>
